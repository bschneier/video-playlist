{
  "name": "video-playlist",
  "version": "1.0.0",
  "description": "A web application that supports playback and modification of a video playlist",
  "author": "Brian Schneier",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bschneier/video-playlist"
  },
  "scripts": {
    "prebuild": "SET NODE_ENV=production& npm-run-all check-security tslint stylelint test",
    "build": "rimraf dist/*& webpack --config config/webpack.prod.js",
    "build:dev": "rimraf dist/*& webpack --config config/webpack.dev.js",
    "check-security": "nsp check",
    "stylelint": "stylelint --config config/stylelint.js --color src/stylesheets/*.scss",
    "prestart": "npm-run-all check-security tslint stylelint test",
    "start": "webpack-dev-server --inline --hot --open --config config/webpack.dev.js",
    "test:watch": "karma start config/karma.conf.js",
    "test": "karma start config/karma.conf.js --single-run",
    "tslint": "tslint src/**/*.ts -t verbose --project config/tsconfig.json --config config/tslint.json"
  },
  "dependencies": {
    "@angular/common": "^4.4.6",
    "@angular/compiler": "^4.4.6",
    "@angular/core": "^4.4.6",
    "@angular/forms": "^4.4.6",
    "@angular/http": "^4.4.6",
    "@angular/platform-browser": "^4.4.6",
    "@angular/platform-browser-dynamic": "^4.4.6",
    "@angular/router": "^4.4.6",
    "@types/videojs": "^5.16.2",
    "core-js": "^2.5.1",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.5.2",
    "video.js": "^6.2.8",
    "videojs-youtube": "^2.4.1",
    "zone.js": "^0.8.18"
  },
  "devDependencies": {
    "@angular/cli": "^1.4.9",
    "@types/jasmine": "^2.6.2",
    "@types/node": "^8.0.47",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.2.3",
    "compression-webpack-plugin": "^1.0.1",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "istanbul-instrumenter-loader": "^3.0.0",
    "jasmine-core": "^2.8.0",
    "karma": "^1.7.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-cli": "^1.0.1",
    "karma-coverage-istanbul-reporter": "^1.3.0",
    "karma-jasmine": "^1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "karma-webpack": "^2.0.5",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "nsp": "^2.8.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "stylelint": "^8.2.0",
    "stylelint-config-sass-guidelines": "^3.1.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-scss": "^2.1.0",
    "tslint": "^5.8.0",
    "typescript": "^2.5.3",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.3",
    "webpack-merge": "^4.1.0"
  }
}
